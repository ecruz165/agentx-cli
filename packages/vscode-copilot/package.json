{
  "name": "agentx-vscode",
  "displayName": "AgentX for VS Code",
  "description": "AI-Enhanced Enterprise Development with AgentX",
  "version": "1.0.0",
  "publisher": "agentx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecruz165/agentx-cli.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "enabledApiProposals": [
    "chatParticipantAdditions"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "categories": [
    "Chat"
  ],
  "activationEvents": [
    "onChatParticipant:agentx.chat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentx.exec",
        "title": "AgentX: Execute Prompt",
        "category": "AgentX"
      },
      {
        "command": "agentx.aliasList",
        "title": "AgentX: List Aliases",
        "category": "AgentX"
      },
      {
        "command": "agentx.aliasShow",
        "title": "AgentX: Show Alias Details",
        "category": "AgentX"
      },
      {
        "command": "agentx.configShow",
        "title": "AgentX: Show Configuration",
        "category": "AgentX"
      },
      {
        "command": "agentx.configPath",
        "title": "AgentX: Show Config Path",
        "category": "AgentX"
      },
      {
        "command": "agentx.selectAlias",
        "title": "AgentX: Select Alias (Legacy)",
        "category": "AgentX"
      },
      {
        "command": "agentx.showConfig",
        "title": "AgentX: Show Config (Legacy)",
        "category": "AgentX"
      },
      {
        "command": "agentx.openLastContext",
        "title": "AgentX: Open Last Context",
        "category": "AgentX"
      },
      {
        "command": "agentx.browseHistory",
        "title": "AgentX: Browse Context History",
        "category": "AgentX"
      },
      {
        "command": "agentx.clearHistory",
        "title": "AgentX: Clear Context History",
        "category": "AgentX"
      },
      {
        "command": "agentx.executeScaffold",
        "title": "AgentX: Initialize Project",
        "category": "AgentX"
      },
      {
        "command": "agentx.initAnyway",
        "title": "AgentX: Initialize Project (No Markers)",
        "category": "AgentX"
      },
      {
        "command": "agentx.reinitialize",
        "title": "AgentX: Add Missing Config Files",
        "category": "AgentX"
      },
      {
        "command": "agentx.reinitializeOverwrite",
        "title": "AgentX: Reinitialize (Overwrite)",
        "category": "AgentX"
      },
      {
        "command": "agentx.executePlan",
        "title": "AgentX: Execute Plan",
        "category": "AgentX"
      },
      {
        "command": "agentx.rejectPlan",
        "title": "AgentX: Cancel Plan",
        "category": "AgentX"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "agentx.exec",
          "group": "agentx"
        },
        {
          "command": "agentx.aliasList",
          "group": "agentx"
        },
        {
          "command": "agentx.aliasShow",
          "group": "agentx"
        },
        {
          "command": "agentx.configShow",
          "group": "agentx"
        },
        {
          "command": "agentx.configPath",
          "group": "agentx"
        },
        {
          "command": "agentx.openLastContext",
          "group": "agentx"
        },
        {
          "command": "agentx.browseHistory",
          "group": "agentx"
        },
        {
          "command": "agentx.clearHistory",
          "group": "agentx"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "agentx.chat",
        "name": "agentx",
        "fullName": "AgentX",
        "description": "AI-Enhanced Enterprise Development Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "alias",
            "description": "Manage context aliases (list, show)"
          },
          {
            "name": "config",
            "description": "View configuration (show, path)"
          },
          {
            "name": "intentions",
            "description": "List or show intentions"
          },
          {
            "name": "init",
            "description": "Initialize AgentX - detect project and scaffold .ai-config"
          },
          {
            "name": "init:analyze",
            "description": "Analyze project type and dependencies without scaffolding"
          },
          {
            "name": "init:scaffold",
            "description": "Scaffold .ai-config with detected project settings"
          },
          {
            "name": "init:scaffold-with-dirs",
            "description": "Scaffold .ai-config and create source directories"
          },
          {
            "name": "help",
            "description": "Show available commands"
          }
        ]
      }
    ]
  },
  "scripts": {
    "generate-commands": "npx ts-node scripts/generate-commands.ts",
    "prebuild": "npm run generate-commands",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build",
    "package": "npm run build && vsce package --no-dependencies",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@agentx/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
